@model HampesFrilansare.Models.Freelancer
@{
    ViewBag.Title = "Registrera dig";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.firstname, labelText: "Förnamn")
        @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.lastname, labelText: "Efternamn")
        @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.email, labelText: "Email")
        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    </div>
    @*@Html.LabelFor(model => model., labelText: "Lösenord")
        @Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control" } })*@
    <div class="form-group">
        <label for="password">Lösenord</label>
        <input class="form-control" type="password" />
    </div>
    <div class="form-group">
        <input type="submit" value="Registrera" class="btn btn-secondary" />
    </div>
</div>
}

<div>
    <p>
        Genom att registrera dig på vår sida godkänner du våra <a href="http://localhost:6162/Error/Error">Regler och villkor</a>
        och vår <a href="http://localhost:6162/Error/Error">Integritetspolicy.</a>
    </p>
</div>

<div>
    <p>
        Har du redan ett konto? <a href="http://localhost:6162/Home/LogIn">Logga in</a>
    </p>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






