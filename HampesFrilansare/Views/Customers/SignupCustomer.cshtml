@model HampesFrilansare.Models.Customer

@{
    ViewBag.Title = "Registrera företag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="generalformhead4">Registrera ditt företag</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<form>
    @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
    <div class="form-group">
        @Html.LabelFor(model => model.businessname, labelText: "Företagsnamn", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.businessname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.businessname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.email, labelText: "Email")
        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    </div>
    @*@Html.LabelFor(model => model., labelText: "Lösenord")
        @Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control" } })*@
    <div class="form-group">
        <label for="password">Lösenord</label>
        <input class="form-control" disabled type="password" placeholder="XXXXXX" />
    </div>
    <div class="form-group">
        <input type="submit" value="Registrera" class="btn btn-secondary" />
    </div>
</form>
}
<div>
    <p>
        Genom att registrera dig på vår sida godkänner du våra <a href="http://localhost:6162/Error/Error">Regler och villkor</a>
        och vår <a href="http://localhost:6162/Error/Error">Integritetspolicy.</a>
    </p>
</div>

<div>
    <p>
        Har du redan ett konto? <a href="http://localhost:6162/Home/LogIn">Logga in</a>
    </p>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


