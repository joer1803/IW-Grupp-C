@model HampesFrilansare.ViewModels.FreelancerSearchModelA

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NavbarCustomer.cshtml";
}

<h2>Företag</h2>

<body>

    <div class="header">
        <form>
            <h2>Hitta frilansare</h2>
            <div class="form-box">
                <input type="text" class="search-field-customers"
                       placeholder="Sök efter kompetens, namn osv..." id="searchstr"/>
            </div>
            @Html.DropDownListFor(m => m.searchcategories, Model.selectcategories, "Välj kategori", htmlAttributes: new { @class = "form-control ", @id= "searchcat" })
            @Html.DropDownListFor(m => m.searchcompetence, Model.selectcompetence, "Välj Kompetens", new { @class = "form-control", @id="searchcomp"})
            @Html.DropDownListFor(m => m.searchskill, Model.selectskills, "Välj teknologi", new { @class = "form-control" })
        </form>
    </div>

</body>


<table class="table">
    <thead>
        <tr>
            <th>
                Namn
            </th>
            <th>
                Kategori
            </th>
            <th>
                Kompetenser
            </th>
            <th>
                Teknologier
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody class="searchresult">
        @foreach (var item in Model.freelancers)
        {
        <tr>
            <td>
                @item.fullname
            </td>
            <td id="compcol">
                @item.compcategory
            </td>
            <td>
                @item.compname
            </td>
            <td>
                @item.skillname
            </td>
        </tr>
        }
    </tbody>

</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchstr").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".searchresult tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>