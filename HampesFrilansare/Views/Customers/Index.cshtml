@model IEnumerable<HampesFrilansare.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Företag</h2>

<body>

    <div class="header">
        <form>
            <h2>Hitta frilansare</h2>
            <div class="form-box">
            <input type="text" class="search-field-customers" 
             paceholder="buisness, Services.."/>

            <button class="search-button" type="button">Sök</button>
            </div>
        </form>

    </div>

</body>

<p>
    @Html.ActionLink("Nytt företag", "Create")
</p>
<table class="table-dark table">
    <tr>
        <th>
            Företagsnamn
        </th>
        <th>
            Förnamn
        </th>
        <th>
            Efternamn
        </th>
        <th>
            Telefon
        </th>
        <th>
            Email
        </th>
        <th>
            Adress
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.businessname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phonenumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.ActionLink("Ändra", "Edit", new { id=item.customerID }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.customerID }) |
            @Html.ActionLink("Ta bort", "Delete", new { id=item.customerID })
        </td>
    </tr>
}

</table>
