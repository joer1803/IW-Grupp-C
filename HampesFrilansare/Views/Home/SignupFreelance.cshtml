
@{
    ViewBag.Title = "SignupFreelance";
}
<h2>@ViewBag.Title</h2>

<div>
    <div>
        <form name="signupfreelance">
            <label for="txtEmail">Email</label>
            <input type="email" name="email" class="textbox" placeholder="email@domain.com" required><br>

            <label for="txtPassword">Password</label>
            <input type="text" name="password" class="textbox" placeholder="XXXXXX" required><br>

            <label for="txtPassword">Repeat Password</label>
            <input type="text" name="repeatpassword" class="textbox" placeholder="XXXXXX" required><br><br><br>

            <input type="button" class="btnJoin" onclick="" value="Join HampesFrilansare"><br><br><br>
        </form>
    </div>

    <div>
        <p>
            By registering you confirm that you accept the <a href="">Terms and Condition</a> 
            and <a href="">Privacy Policy</a>
        </p>
    </div>

    <div>
        <p>
            Alreday have an account? <a href="http://localhost:6162/Home/LogIn">Log in</a>
        </p>
    </div>


</div>



