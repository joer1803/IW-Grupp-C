<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hampes Frilansare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />


</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Hampes Frilansare", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Min Profil", "ProfileCustomer", "Customers", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Lägg till företag", "Create", "Customers", null, new { @class = "nav-link" })</li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("Logga ut", "Index", "Home", null, new { @class = "nav-link" })</li>
                </ul>

            </div>
        </div>
    </nav>

    <div class="margin">


    </div>



    @RenderBody()
    <footer class="newfoot">

        <section>
            <h6>Kontaktuppgifter</h6>
            <p>
                Email företag:
                <a href="mailto:Marketing@example.com">Supportcustomer@gmail.se</a><br />
                Email frilansare:
                <a href="mailto:Support@example.com">Supportfreelancer@gmail.se</a><br />
                Telefon: 08-1234567
            </p>
        </section>

        <section class="social">
            <h6>Sociala medier</h6>
            <ul class="socialicon">
                <li><a href="http://localhost:6162/Error/Error" class="fab fa-facebook"></a></li>
                <li><a href="http://localhost:6162/Error/Error" class="fab fa-linkedin"></a></li>
                <li><a href="http://localhost:6162/Error/Error" class="fab fa-twitter-square"></a></li>
            </ul>
        </section>

        <section class="footerlinks">
            <p>@Html.ActionLink("Om oss", "About", "Home")</p>
            <p>@Html.ActionLink("Integritetspolicy", "Error", "Error")</p>
            <p>@Html.ActionLink("Regler och villkor", "Error", "Error")</p>
        </section>
    </footer>

    <footer class="second">
        <p>&copy; @DateTime.Now.Year - Hampes frilansare, med ensamrätt</p>
    </footer>

    <script src="https://kit.fontawesome.com/622bc9da0f.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

